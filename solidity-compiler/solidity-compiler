_bin="$( \
  dirname \
    "$( \
      command \
        -v \
	  "env")")"
_lib="$( \
  realpath \
    "${_bin}/../lib")"
_crash_bash="${_lib}/libcrash-bash/crash-bash"
_sourced \
  "${_crash_bash}" 2>/dev/null || \
  source \
    "${_crash_bash}"

# shellcheck disable=SC2034
_global_variables() {
  build_date=""
  compiler_backend=""
  solc_version=""
  evm_version=""
  target_contracts=()
  out_dir=""
  output_type=""
  work_dir=""
  dev_deps=""
  cache_clean=""
  color=""
  quiet=""
}

_requirements() {
  local \
    _os \
    _nodejs \
    _npm_package
  _os="$( \
    uname \
      -o)"
  _nodejs="nodejs"
  _check_cmd \
    "find" \
    "findutils"
  if [[ "${_os}" == "GNU/Linux" ]]; then
    _check_cmd \
      "cpio"
  fi
  if [[ "${_os}" == "GNU/Linux" ]]; then
    _npm_package="npm"
  elif [[ "${_os}" == "Android" ]]; then
    _npm_package="nodejs"
  fi
  _check_cmd \
    'npm' \
    "${_npm_package}"
  _check_cmd \
    'npx' \
    "${_npm_package}"
  _check_cmd \
    "indent"
  _check_cmd \
    'node' \
    "${_nodejs}"
  _check_cmd \
    "head" \
    "coreutils"
  _check_cmd \
    "sed"
}

_get_conf_dir_path() {
  local \
    _dir
  _dir="${HOME}/.config/${app_name}"
  echo \
    "${_dir}"
}

_node_path_get() {
  _get_lib || \
  npm \
    -g \
    list | \
    head \
      -n \
        1
}

_evm_version_set() {
  local \
    _config_path="${1}" \
    _version="${2}" \
    _config \
    repl \
    _msg=()
  _msg=(
    "Setting evm version"
    " '${_version}' in"
    "'${_config_path}'."
  )
  _msg_info \
    "${_msg[*]}"
  _repl=(
    "settings: {"
      "evmVersion:"
        "\"${_version}\", },"
  )
  if [[ "${_solc_version}" == "auto" ]]; then
    _config="$( \
      cat \
        "${_config_path}" | \
        indent \
          -kr | \
          sed \
            "/solidity/d")"
  _config="$( \
    echo \
      "${_config}" | \
      sed \
        "/module.exports/a solidity: { ${_repl[*]} }," | \
        indent \
          -kr)"
  elif [[ "${_solc_version}" != "auto" ]]; then
    _config="$( \
      cat \
        "${_config_path}" | \
        indent \
          -kr | \
          sed \
          "s/\(\bversion:\".*,\)/\1 ${_repl[*]}/" | \
          indent \
            -kr)"
  fi
  echo \
    "${_config}" > \
    "${_config_path}"
  _msg_info \
    "New '${_config_path}':"
  cat \
    "${_config_path}"
}

_solc_version_set() {
  local \
    _config_path="${1}" \
    _version="${2}" \
    _config \
    _msg=()
  _msg=(
    "Setting solc version"
    " '${_version}' in"
    "'${_config_path}'."
  )
  _msg_info \
    "${_msg[*]}"
  _msg_info \
    "Current '${_config_path}':"
  cat \
    "${_config_path}"
  _config="$( \
    cat \
      "${_config_path}" | \
      indent \
        -kr | \
        sed \
          '/solidity:/d')"
  _config="$( \
    echo \
      "${_config}" | \
      sed \
        "/module.exports/a solidity: { version:\"${_version}\", }" | \
        indent \
          -kr)"
  echo \
    "${_config}" > \
    "${_config_path}"
  _msg_info \
    "New '${_config_path}':"
  cat \
    "${_config_path}"
}

_hardhat_init() {
  local \
    _oldpwd \
    _node_path
  _oldpwd="$( \
    pwd)"
  _node_path="$( \
    _node_path_get)"
  _msg_info \
    "Node path is: ${_node_path}"
  cd \
    "${_project_dir}"
  echo \
    "3\n" | \
    NODE_PATH="${_node_path}" \
    npx \
      hardhat \
        init
  if [[ "${_solc_version}" != "auto" ]]; then
    _solc_version_set \
      "${_project_dir}/hardhat.config.js" \
      "${_solc_version}"
  fi
  if [[ "${_evm_version}" != "auto" ]]; then
    _evm_version_set \
      "${_project_dir}/hardhat.config.js" \
      "${_evm_version}"
  fi
  rm \
    -rf \
    "${_project_dir}/contracts/Lock.sol"
  cd \
    "${_oldpwd}"
}

_node_package_path_get() {
  local \
    _pkg="${1}" \
    _find_opts=() \
    _msg=() \
    _local_node_path \
    _node_path \
    _oldpwd \
    _pkg_path \
    _os
  _os="$( \
    uname \
      -o)"
  _node_path="$( \
    _node_path_get)/node_modules"
  _package="${_pkg}"
  _msg=(
    "Looking for '${_pkg}'"
    "in local system node"
    "tree '${_node_path}'."
  )
  _msg_info \
    "${_msg[*]}"
  _pkg_path="${_node_path}/${_pkg}"
  if [ -d "${_pkg_path}" ]; then
    _msg=(
      "Found ${_pkg_path} in system tree."
    )
    _msg_info \
      "${_msg[*]}"
    # When installing from a local directory it seems
    # npm tries to change permissions of the directory,
    # so if trying to install a package from the local
    # system node module directory in an non-Android
    # environment that's not possible.
    # Wild.
    # I suppose this should be reported because it doesn't
    # seem at all something one would ever want to do,
    # yet it seems reasonable installing packages
    # from the system node modules tree.
    if [[ "${_os}" == "GNU/Linux" ]]; then
      _local_node_path="${_work_dir}/pkgs"
      _msg=(
        "Copying package in local"
        "directory tree at"
        "'${_local_node_path}'."
      )
      _msg_info \
        "${_msg[*]}"
      mkdir \
        -p \
        "${_local_node_path}"
      _oldpwd="$( \
        pwd)"
      cd \
        "${_node_path}"
      _find_opts=(
        -wholename
          "./${_pkg}/*"
        -type
          "f"
      )
      find \
        . \
        "${_find_opts[@]}" | \
        cpio \
          -p \
          -dum \
          "${_local_node_path}/."
      _pkg_path="${_local_node_path}/${_pkg}"
      cd \
        "${_oldpwd}"
    fi
    _package="${_pkg_path}"
  fi
    _msg=(
      "Set node package path '${_package}'."
    )
    _msg_info \
      "${_msg[*]}"
}

_npm_install() {
  local \
    _project_dir="${1}" \
    _pkg="${2}" \
    _msg=() \
    _npm_cmd=() \
    _npm_install_opts=() \
    _node_path \
    _oldpwd \
    _package \
    _pkg_path
  _node_path="$( \
    _node_path_get)/node_modules"
  _node_package_path_get \
    "${_pkg}"
  _oldpwd="$( \
    pwd)"
  cd \
    "${_project_dir}"
  _npm_cmd=(
    npm
      install
  )
  if [[ "${_dev_deps}" == "y" ]]; then
    _msg=(
      "Installing developer"
      "dependencies."
    )
    _msg_info \
      "${_msg[*]}"
    _npm_install_opts+=(
      --save-dev
    )
  elif [[ "${_dev_deps}" == "n" ]]; then
    _msg=(
      "Installing production"
      "dependencies."
    )
    _msg_info \
      "${_msg[*]}"
    _npm_install_opts+=(
      --save-prod
    )
  fi
  _npm_cmd+=(
    "${_npm_install_opts[@]}"
    "${_package}"
  )
  _msg=(
    "Installing package '${_package}'"
    "in '${_project_dir}'"
    "with node path '${_node_path}'."
  )
  _msg_info \
    "${_msg[*]}"
  export \
    NODE_PATH="${_node_path}"
  if [[ "${quiet}" == "y" ]]; then
    NODE_PATH="${_node_path}" \
      "${_npm_cmd[@]}" 1&> \
      /dev/null
  elif [[ "${quiet}" == "n" ]]; then
    "${_npm_cmd[@]}"
  fi
  cd \
    "${_oldpwd}"
}

_hardhat_project_init() {
  local \
    _project_dir="${1}" \
    _oldpwd \
    _os \
    _pkg \
    _pkgs=()
  _oldpwd="$( \
    pwd)"
  _os="$( \
    uname \
      -o)"
  if [[ "${_os}" == "GNU/Linux" ]]; then
    _pkgs+=(
      "@nomicfoundation/eslint-plugin-hardhat-internal-rules"
      "@nomicfoundation/eslint-plugin-slow-imports"
    )
  fi
  _pkgs+=(
    "hardhat"
  )
  if [[ "${_os}" == "Android" ]]; then
    _pkgs+=(
      "@nomicfoundation/solidity-analyzer-android-arm-eabi"
    )
  fi
  cd \
    "${_project_dir}"
  _msg_info \
    "Setting up hardhat environment."
  for _pkg in "${_pkgs[@]}"; do
    _npm_install \
      "${_project_dir}" \
      "${_pkg}"
  done
  if [[ "${quiet}" == "y" ]]; then
    _hardhat_out="$( \
      _hardhat_init \
        "${_project_dir}")"
  elif [[ "${quiet}" == "n" ]]; then
    _hardhat_init \
      "${_project_dir}"
  fi
  cd \
    "${_oldpwd}"
}

_node_project_init() {
  local \
    _project_dir="${1}" \
    _npm_cmd=() \
    _node_path \
    _oldpwd
  _oldpwd="$( \
    pwd)"
  _node_path="$( \
    _node_path_get)/node_modules"
  cd \
    "${_project_dir}"
  _npm_cmd=(
    npm
      init
        -y
  )
  _msg_info \
    "Setting up new node project with node path '${_node_path}'."
  export \
    NODE_PATH="${_node_path}"
  if [[ "${quiet}" == "y" ]]; then
    NODE_PATH="${_node_path}" \
    "${_npm_cmd[@]}" 1&>/dev/null
  elif [[ "${quiet}" == "n" ]]; then
    NODE_PATH="${_node_path}" \
    "${_npm_cmd[@]}"
  fi
  cd \
    "${_oldpwd}"
}

_contract_bytecode_build() {
  local \
    _solc="${1}" \
    _evm_version="${2}" \
    _contract="${3}" \
    _output_bytecode="${4}" \
    _output_dir \
    _solc_opts=() \
    _msg=() \
    _contract_name \
    _not_empty
  _contract_name="$( \
    basename \
      "${_contract%.sol}")"
  if [[ "${_evm_version}" != "auto" ]]; then
    solc_opts+=(
      --evm-version
        "${_evm_version}"
    )
  fi
  _solc_opts+=(
    --bin
    -o
      "bytecode"
  )
  _msg=(
    "Building contract '${_contract}'"
    "bytecode using '${_solc}' with options"
    "'${_solc_opts[@]}'."
  )
  _msg_info \
    "${_msg[*]}"
  "${_solc}" \
    "${_solc_opts[@]}" \
    "${_contract}"
  mv \
    "bytecode/${_contract_name}.bin" \
    "${_output_bytecode}"
  _bytecodes_find
  if [[ "${_bytecodes[*]}" != "" ]]; then
    _output_bytecode_dir="$( \
      dirname \
        "${_output_bytecode}")"
    _msg=(
      "There were these additional"
      "files in the bytecode directory:"
      "'${_bytecodes[*]}', copying"
      "them over to"
      "'${_output_bytecode_dir}'."
    )
    _msg_warning \
      "${_msg[*]}"
    cp \
      "${_bytecodes[@]}" \
      "${_output_bytecode_dir}" || \
    true
  fi
  rm \
    -rf \
    "bytecode"
  _msg=(
    "Contract bytecode correctly saved to"
    "'${_output_bytecode}'."
  )
  _msg_info \
    "${_msg[*]}"
}

_find_extension() {
  local \
    _array_name="${1}" \
    _dir="${2}" \
    _extension="${3}"
  mapfile \
    -d \
    $'\0' \
    "${_array_name}" < \
    <(find \
        "${_dir}" \
	-name \
          "*.${_extension}" \
        -type \
          "f" \
        -print0 || \
      true)
}

_bytecodes_find() {
  _find_extension \
    "_bytecodes" \
    "bytecode" \
    "bin"
}

_bytecode_runtimes_find() {
  _find_extension \
    "_bytecode_runtimes" \
    "bytecode-runtime" \
    "bin-runtime"
}

_abis_find() {
  _find_extension \
    "_abis" \
    "abi" \
    "abi"
}

_contract_bytecode_runtime_build() {
  local \
    _solc="${1}" \
    _evm_version="${2}" \
    _contract="${3}" \
    _output_bytecode_runtime="${4}" \
    _output_bytecode_runtime_dir \
    _solc_opts=() \
    _bytecode_runtimes=() \
    _msg=() \
    _contract_name
  _contract_name="$( \
    basename \
      "${_contract%.sol}")"
  if [[ "${_evm_version}" != "auto" ]]; then
    solc_opts+=(
      --evm-version
        "${_evm_version}"
    )
  fi
  _solc_opts+=(
    --bin-runtime
    -o
      "bytecode-runtime"
  )
  _msg=(
    "Building contract '${_contract}'"
    "runtime bytecode using '${_solc}'"
    "with options '${_solc_opts[@]}'."
  )
  _msg_info \
    "${_msg[*]}"
  "${_solc}" \
    "${_solc_opts[@]}" \
    "${_contract}"
  cp \
    "bytecode-runtime/${_contract_name}.bin-runtime" \
    "${_output_bytecode_runtime}" || \
  true
  _bytecode_runtimes_find
  if [[ "${_bytecode_runtimes[*]}" != "" ]]; then
    _output_bytecode_runtime_dir="$( \
      dirname \
        "${_output_bytecode_runtime}")"
    _msg=(
      "There were these additional"
      "files in the bytecode directory:"
      "'${_bytecode_runtimes[*]}', copying"
      "them over to"
      "'${_output_bytecode_runtime_dir}'."
    )
    _msg_warning \
      "${_msg[*]}"
    cp \
      "${_bytecode_runtimes[@]}" \
      "${_output_bytecode_runtime_dir}" || \
    true
  fi
  rm \
    -rf \
    "bytecode-runtime" || \
    true
  _msg=(
    "Contract runtime bytecode correctly saved to"
    "'${_output_bytecode_runtime}'."
  )
  _msg_info \
    "${_msg[*]}"
}

_contract_abi_build() {
  local \
    _solc="${1}" \
    _evm_version="${2}" \
    _contract="${3}" \
    _output_json="${4}" \
    _output_json_dir \
    _solc_opts=() \
    _abis=() \
    _contract_name \
    _msg=()
  _contract_name="$( \
    basename \
      "${_contract%.sol}")"
  if [[ "${_evm_version}" != "auto" ]]; then
    solc_opts+=(
      --evm-version
        "${_evm_version}"
    )
  fi
  _solc_opts+=(
    --abi
    -o
      "abi"
  )
  _msg=(
    "Building contract '${_contract}'"
    "ABI using '${_solc}' with options"
    "'${_solc_opts[@]}'."
  )
  _msg_info \
    "${_msg[*]}"
  "${_solc}" \
    "${_solc_opts[@]}" \
    "${_contract}"
  mv \
    "abi/${_contract_name}.abi" \
    "${_output_json}" || \
    true
  _abis_find
  if [[ "${_abis[*]}" != "" ]]; then
    _output_json_dir="$( \
      dirname \
        "${_output_json}")"
    _msg=(
      "There were these additional"
      "files in the abi directory:"
      "'${_abis[*]}', copying"
      "them over to"
      "'${_output_json_dir}'."
    )
    _msg_warning \
      "${_msg[*]}"
    cp \
      "${_abis[@]}" \
      "${_output_json_dir}" || \
    true
  fi
  rm \
    -rf \
    "abi"
  _msg=(
    "Contract ABI correctly saved to"
    "'${_output_json}'."
  )
  _msg_info \
    "${_msg[*]}"
}

_solc_version_check() {
  local \
    _solc="${1}" \
    _version="${2}" \
    _msg=()
  if [[ "${_solc}" == "" ]]; then
    _msg=(
      "Compiler 'solc${_version}' not found"
      "on this system."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
}

_solc_output_path_get() {
  local \
    _output_type="${1}"
  _output_path=""
  if [[ "${_output_type}" == "abi" ]]; then
    _solc_output_path="${_work_dir}/${_contract_name}.abi.json"
  elif [[ "${_output_type}" == "bytecode" ]]; then
    _solc_output_path="${_work_dir}/${_contract_name}.bin"
 elif [[ "${_output_type}" == "bytecode_runtime" ]]; then
    _solc_output_path="${_work_dir}/${_contract_name}.runtime.bin"
  fi
  _msg=(
    "Set solc output path '${_solc_output_path}'"
    "for output type '${_output_type}'."
  )
  _msg_info \
    "${_msg[*]}"
}

_solc_build() {
  local \
    _output_type="${1}" \
    _solc_version="${2}" \
    _evm_version="${3}" \
    _work_dir="${4}" \
    _out_dir="${5}" \
    _msg=() \
    _solc_output_path \
    _output_types=() \
    _solc \
    _solc_opts=() \
    _type \
    _contracts=() \
    _contract
  shift \
    5
  _contracts=(
    "$@"
  )
  if [[ "${_output_type}" == "" || \
        "${_output_type}" == "all" ]]; then
    _output_types+=(
      "abi"
      "bytecode"
      "bytecode_runtime"
    )
  elif [[ "${_output_type}" != "all" ]];  then
    _output_types+=(
      "${_output_type}"
    )
  fi
  _solc="$( \
    _solc_get \
      "${_solc_version}")"
  _solc_version_check \
    "${_solc}" \
    "${_solc_version}"
  cp \
    -r \
    "${_contracts[@]}" \
    "${_work_dir}"
  for _contract in "${_contracts[@]}"; do
    _contract_name="$( \
      basename \
        "${_contract%.sol}")"
    for _type in "${_output_types[@]}"; do
      _solc_output_path_get \
        "${_type}"
      "_contract_${_type}_build" \
        "${_solc}" \
        "${_evm_version}" \
        "${_contract}" \
        "${_solc_output_path}"
    done
    # Adding
    # _contract_bytecode_runtime_build \
    #   "${_solc}" \
    #   "${_evm_version}" \
    #   "${_contract}" \
    #   "${_work_dir}/${_contract_name}.runtime.bin"
  done
  cp \
    -r \
    "${_work_dir}/"* \
    "${_out_dir}"
}

_project_init() {
  local \
    _project_dir="${1}" \
    _gyp_defines \
    _oldpwd
  _oldpwd="$( \
    pwd)"
  cd \
    "${_project_dir}"
  _gyp_defines="android_ndk_path=''"
  export \
    GYP_DEFINES="${_gyp_defines}" 
  _node_project_init \
    "${_project_dir}"
  _hardhat_project_init \
    "${_project_dir}"
  cd \
    "${_oldpwd}"
}

_project_build() {
  local \
    _project_dir="${1}" \
    _out_dir="${2}" \
    _oldpwd \
    _node_modules
  _oldpwd="$( \
    pwd)"
  _msg_info \
    "Building contracts with hardhat."
  cd \
    "${_project_dir}"
  mkdir \
    -p \
    contracts
  cp \
    -r \
    "${_target_contracts[@]}" \
    "contracts" || \
    true
  _node_path="${_project_dir}/node_modules"
  _msg_info \
    "Running hardhat with node path '${_node_path}'."
  export \
    NODE_PATH="${_node_path}"
  NODE_PATH="${_node_path}" \
  npx \
    hardhat \
    compile
  if [ -d "artifacts" ]; then
    cp \
      -r \
      "artifacts/"* \
      "${_out_dir}"
  else
    _msg_error \
      "Contract build failed." \
      0
    cd \
      "${_oldpwd}"
    exit \
      1
  fi
  if [[ "${quiet}" == "n" ]]; then
    tree \
      "${_out_dir}"
  fi
  _msg_info \
    "Hardhat contract build successful."
  cd \
    "${_oldpwd}"
}

_solidity_compiler() {
  local \
    _output_type="${1}" \
    _out_dir="${2}" \
    _compiler_backend="${3}" \
    _evm_version="${4}" \
    _solc_version="${5}" \
    _dev_deps="${6}" \
    _cache_clean="${7}" \
    _work_dir="${8}" \
    _target_contracts=() \
    _oldpwd
  shift \
    8
  _target_contracts+=(
    "$@"
  )
  if [[ "${_work_dir}" == "" ]]; then
    _work_dir="$( \
      mktemp \
        -d)"
  fi
  _oldpwd="$( \
    pwd)"
  cd \
    "${_work_dir}"
  if [[ "${_compiler_backend}" == "solc" ]]; then
    _solc_build \
      "${_output_type}" \
      "${_solc_version}" \
      "${_evm_version}" \
      "${_work_dir}" \
      "${_out_dir}" \
      "${_target_contracts[@]}"
  elif [[ "${_compiler_backend}" == "hardhat" ]]; then
    _project_init \
      "${_work_dir}" || \
      true
    _project_build \
      "${_work_dir}" \
      "${_out_dir}"
  fi
  cd \
    "${_oldpwd}"
  if [[ "${_cache_clean}" == "y" ]]; then
    rm \
      -rf -- \
      "${_work_dir}"
  fi
}

_out_dir_auto_detect(){
  local \
    _contract_dir
  # if [[ "${target_contracts}" != "" ]]; then
  #   _contract_dir="$( \
  #     dirname \
  #      "${target_contracts}")"
  # else
    _contract_dir="$( \
      pwd)"
  # fi
  echo \
    "${_contract_dir}"
}

_work_dir_auto_detect() {
  local \
    _cache_dir \
    _gid \
    _uid \
    _work_dir \
    _work_dir_name
  if [[ "$(_get \
             "work" \
             "dir")" == "" ]]; then
    _cache_dir="${HOME}/.cache/$(_get \
                                   "app" \
                                   "name")"
    _work_dir_name="$( \
      basename \
        "$(mktemp \
             -d)")"
    _work_dir="${_cache_dir}/${_work_dir_name}"
    mkdir \
      -p \
      "${_work_dir}"
  fi
  _gid="$( \
    id \
      -un)"
  _uid="$( \
    id \
      -un)"
  chown \
    -R \
    "${_uid}:${_gid}" \
    "${_work_dir}"
  chmod \
    -R \
    755 \
    "${_work_dir}"
  _msg_info \
    "no work dir specified, setting '${_work_dir}'"
  _set_override \
    "work" \
    "dir" \
    "${_work_dir}"
}

_solc_version_get() {
  local \
    _solc="${1}"
  solc \
    --version | \
    tail \
      -n \
        1 | \
      awk \
        '{print $2}' | \
        cut \
          -d \
            '+' \
          -f \
            1
}

_solc_get() {
  local \
   _solc_version="${1}"  \
   _solc \
   _version \
   _solc_default \
   _version_default
  _version="${_solc_version}"
  if [[ "${_solc_version}" == "auto" ]]; then
    _version=""
  fi
  _solc="$( \
    command \
      -v \
      "solc${_version}")"
  if [[ "${_solc}" == "" ]]; then
    _solc_default="$( \
      command \
        -v \
        "solc")"
    _version_default="$( \
      _solc_version_get \
        "${_solc_default}")"
    if [[ "${_version}" == "${_version_default}" ]]; then
      _solc="${_solc_default}"
    fi
  fi
  echo \
    "${_solc}"
}

_compiler_backend_auto_detect() {
  local \
    _backend \
    _msg=() \
    _solc_version \
    _solc
  _backend="solc"
  _solc_version="$( \
    _get \
      "solc" \
      "version")"
  _solc="$( \
    _solc_get \
      "${_solc_version}")"
  if [[ "${_solc}" == "" ]]; then
    _msg=(
      "'${_solc}' not found, setting"
      " 'hardhat' as backend"
    )
    _msg_info \
      "${_msg[*]}"
    _backend="hardhat"
  fi
  _set_override \
    "compiler" \
    "backend" \
    "${_backend}"
}

_set_overrides() {
  if [[ -v override_quiet ]]; then
    quiet="${override_quiet}"
  elif [[ -z "${quiet}" ]]; then
    quiet="y"
  fi
  if [[ -v override_color ]]; then
    color="${override_color}"
  elif [[ -z "${color}" ]]; then
    color="n"
  fi
  _set_override \
    "build" \
    "date" \
    "$(_get_date_human)"
  _set_override \
    "output" \
    "type" \
    "all"
  _set_override \
    "solc" \
    "version" \
    "auto"
  _set_override \
    "evm" \
    "version" \
    "auto"
  _compiler_backend_auto_detect
  _work_dir_auto_detect
  _set_override \
    "out" \
    "dir" \
    "$(_out_dir_auto_detect)"
  _set_override \
    "dev" \
    "deps" \
    "n"
  _set_override \
    "cache" \
    "clean" \
    "n"
}

# Show help usage, with an exit status.
# $1: exit status number.
_usage() {
  local \
    _exit="${1}" \
    _usage_text
  IFS='' \
    read \
      -r \
      -d '' \
      _usage_text << \
        ENDUSAGETEXT || true
Solidity compiler.

Usage:

  ${app_name}
    [options]
    [target_contract]

  options
     -t <output_type>     Type of the output to generate.
                          It can be 'all'.
                          Default: ${output_type}
     -o <out_dir>         Output directory.
                          Default: ${out_dir}
     -l                   Whether to delete the work directory
                          after a successful build.
                          Default: ${cache_clean}
     -d                   Whether to install developer dependencies.
                          Default: ${dev_deps}

  compiler options:
     -b <backend>         Compiler backend.
                          Default: ${compiler_backend}
     -C <solc_version>    Version of the solc compiler to use.
                          Default: ${solc_version}
     -e <evm_version>     Ethereum virtual machine version.
                          Default: ${evm_version}

  application options:
     -w <work_dir>        Work directory
                          Default: ${work_dir}

     -h                   This message.
     -c                   Enable color output
     -v                   Enable verbose output
ENDUSAGETEXT
  _printf \
    '%s\n' \
    "${_usage_text}"
  exit \
    "${_exit}"
}

# Shows configuration options.
_show_config() {
  _msg_info "${app_name} configuration"
  _msg_info "               Build date:   ${build_date}"
  _msg_info "         Target contracts:   ${target_contracts}"
  _msg_info "                  Out dir:   ${out_dir}"
  _msg_info "              Cache clean:   ${cache_clean}"
  _msg_info "   Developer dependencies:   ${dev_deps}"
  _msg_info "       Compiler options:"
  _msg_info "         Compiler backend:   ${compiler_backend}"
  _msg_info "             solc version:   ${solc_version}"
  _msg_info "              EVM version:   ${evm_version}"
  _msg_info "    Application options:"
  _msg_info "                 Work dir:   ${work_dir}"
}

_globals
_global_variables
_requirements
# shellcheck disable=SC2034
while \
  getopts \
    't:o:l:db:C:e:w:lcvh?' \
    arg; do
  case \
    "${arg}" in
    t) \
      override_output_type="${OPTARG}" ;;
    o) \
      override_out_dir="$( \
        realpath \
          "${OPTARG}")" ;;
    l) \
      override_cache_clean="y" ;;
    d) \
      override_dev_deps="y" ;;
    b) \
      override_compiler_backend="${OPTARG}" ;;
    C) \
      override_solc_version="${OPTARG}" ;;
    e) \
      override_evm_version="${OPTARG}" ;;
    w) \
      override_work_dir="$( \
        realpath \
          "${OPTARG}")" ;;
    c) \
      override_color="y" ;;
    v) \
      override_quiet="n" ;;
    h|?) \
      _set_overrides && \
      _usage \
        0 ;;
    *) \
      _msg_error \
        "Invalid argument '${arg}'." \
        0 && \
      _set_overrides && \
      _usage \
        1
    ;;
  esac
done
shift \
  $(( \
    OPTIND - 1 \
  ))
for _contract in "$@"; do
  target_contracts+=( "$( \
    realpath \
      "${_contract}")"
  )
done
if [[ "${target_contracts[*]}" ==  "" ]]; then
  _msg_error \
    "No contracts specified." \
    0
  _set_overrides
  _usage \
    1
fi
_set_overrides
_config_user_init \
  "${app_name}"
_show_config
app_opts=(
  "${output_type}"
  "${out_dir}"
  "${compiler_backend}"
  "${evm_version}"
  "${solc_version}"
  "${dev_deps}"
  "${cache_clean}"
  "${work_dir}"
  "${target_contracts[@]}"
)
_solidity_compiler \
  "${app_opts[@]}"

